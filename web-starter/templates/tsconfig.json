{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",

    "importHelpers": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "jsx": "react",

    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ]
  },

  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
}